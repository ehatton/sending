# Load standard UniProt curation environment (required for subprocess calls)
BINPROT=path/to/binprot
SPROT=path/to/sprot
PERLLIB=path/to/perllib
PATH=update/path/variable

# Set base path variables
TR_UPD=tests/fixtures/files
FOR_AMOS=tests/fixtures/files
REMOTE_DIR=/remote/server/path

# Directories for the different submission file types
LOG_DIR=${TR_UPD}/logfiles
LOG_REMOTE_DIR=${REMOTE_DIR}/various

TREMBL_DIR=${TR_UPD}/tremblfiles
TREMBL_REMOTE_DIR=${REMOTE_DIR}/tr_curated

NEW_DIR=${TR_UPD}/newfiles
NEW_REMOTE_DIR=${REMOTE_DIR}/tr_curated

PEP_DIR=${FOR_AMOS}/pepfiles
PEP_REMOTE_DIR=${REMOTE_DIR}/tr_curated

SUB_DIR=${FOR_AMOS}/subfiles
SUB_REMOTE_DIR=${REMOTE_DIR}/tr_curated

PID_DIR=${FOR_AMOS}/pidfiles
PID_REMOTE_DIR=${REMOTE_DIR}/pidupd

SEQ_DIR=${FOR_AMOS}/seqfiles
SEQ_REMOTE_DIR=${REMOTE_DIR}/sequpd

# FTP authentication
REMOTE_HOST_NAME=Remote
REMOTE_USER=username
REMOTE_SERVER=server
REMOTE_KEY=path/to/key

# Server to retrieve TrEMBL entries (required for creation of pyvcr cassettes)
TREMBL_SERVER=https://www.uniprot.org
